gradient(start, color1, color2)
   background-image: -webkit-linear-gradient(start, color1, color2); 
   background-image: -moz-linear-gradient(start, color1, color2);
   background-image: -ms-linear-gradient(start, color1, color2);
   background-image: -o-linear-gradient(start, color1, color2);

