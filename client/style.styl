color_darkblue = #215e86
color_orange = #f04e23
color_green = #70bf00
color_darkgreen = #4e8500
color_blue = #4896cb

bluebg()
  background-image: url('/images/blue-bg.jpg');

html
  background: black;

body
  font: 16px Kameron;
  background: white;
  width: 320px;
  height: 440px;
  margin: 0;

body h3 
  font-size: 27px
  margin: auto 20px
  text-align: left

body header 
  height: 48px;
  text-align: center
  position: relative

body header img
  margin-top: 8px
  height: 27px;

body header img:first-child
  height: 23px;
  position: absolute
  left: 11px;
  top: 11px;
  margin-top: 0

body img.lobby 
  margin: 40px 0 35px 18px;
  height: 110px;

body div.lobby.bluebg
  height: 250px;
  bluebg()

body div.lobby input:first-child
  margin-top: 40px;

body input[type="button"]
  height: 55px;
  border-radius: 15px;
  background-color: color_green;
  border: 5px solid color_darkgreen;
  font: 26px Kameron;
  width: 280px;
  margin: 5px 20px;
  -webkit-appearance:none;

body input[type="button"].blue 
  background-color: color_blue;
  border-color: color_darkblue;

body p 
  font-size: 16px;
  text-align: center;

body p span.bar
  display: inline-block;
  -webkit-transform: translateY(-3px)
  width: 60px;
  height: 2px;
  background-color: black;




body div.newgame.bluebg
  padding: 20px 0 0 0;
  height: 392px;
  bluebg()

body div.newgame ul 
  width: 300px;
  list-style-type: none
  padding: 0

body div.newgame ul li
  text-align: center
  float: left
  width: 100px

a.button
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;

// Mixins
animate(name, time)
    animation name time forwards
    -moz-animation name time forwards
    -webkit-animation name time forwards
    -o-animation name time forwards
    -ms-animation name time forwards

// Keyframes
@keyframes slideLeft
    from
        left 100%
    to
        left 0%

@keyframes slideRight
    from
        left 0%
    to
        left 100%

