// Mixins
animate(name, time, fillmode)
    animation name time fillmode
    -moz-animation name time fillmode
    -webkit-animation name time fillmode
    -o-animation name time fillmode
    -ms-animation name time fillmode

transform(arg)
    transform arg
    -moz-transform arg
    -webkit-transform arg
    -o-transform arg
    -ms-transform arg

// Keyframes
@keyframes bounceIn
    0%
        opacity 0
        transform(scale(.3))
    50%
        opacity 1
        transform(scale(1.05))
    70%
        transform(scale(.9))
    100%
        transform(scale(1))

// Styles
body
    font 12px Helvetica, Arial, sans-serif

div#wrapper
    width 100px
    position absolute
    animate(bounceIn, 1s, forwards)

a.button
    -webkit-border-radius 5px
    -moz-border-radius 5px
    border-radius 5px

