color_darkblue = #215e86
color_orange = #f04e23
color_green = #70bf00
color_darkgreen = #4e8500
color_blue = #4896cb

bluebg()
  background-image: url('/images/blue-bg.jpg')

html
  background: black

body
  font: 16px Kameron
  background: white
  width: 320px
  height: 440px
  margin: 0

body h3 
  font-size: 27px
  margin: auto 20px
  text-align: left

body h3.blue
  color: color_darkblue

body header 
  height: 48px
  width: 320px
  text-align: center
  position: relative

body header img
  margin-top: 8px
  height: 27px

body header img:first-child
  height: 23px
  position: absolute
  left: 11px
  top: 11px
  margin-top: 0

body img.lobby 
  margin: 40px 0 35px 18px
  height: 110px

body div.lobby.bluebg
  height: 250px
  bluebg()

body div.lobby input:first-child
  margin-top: 40px

body input[type="button"]
  height: 55px
  border-radius: 15px
  background-color: color_green
  border: 5px solid color_darkgreen
  font: 26px Kameron
  width: 280px
  margin: 5px 20px
  -webkit-appearance:none

body input[type="button"].blue 
  background-color: color_blue
  border-color: color_darkblue

body p 
  font-size: 16px
  text-align: center

body p span.bar
  display: inline-block
  -webkit-transform: translateY(-3px)
  width: 60px
  height: 2px
  background-color: black




body div.newgame.bluebg
  padding: 20px 0 0 0
  height: 392px
  width: 320px
  bluebg()

body div.newgame ul 
  width: 300px
  list-style-type: none
  padding: 0

body div.newgame ul li
  text-align: center
  float: left
  width: 100px

body div.join.bluebg 
  padding: 20px 0 0 0
  height: 392px
  width: 320px
  bluebg()

body div.join.bluebg input[type="text"]
  width: 240px
  margin-left: 60px
  height: 94px
  padding: 0
  background: url('/images/code-background.png') transparent
  border: none
  background-size: 200px 94px
  background-repeat: no-repeat
  font-size: 90px
  font-family: "Courier New", "Courier"
  letter-spacing: 15px
  -webkit-appearance: none
  outline: 0

body div.join.bluebg img 
  width: 37px

body div.join.bluebg h3.blue 
  margin-left: 0
  text-align: center

a.button
  -webkit-border-radius: 5px
  -moz-border-radius: 5px
  border-radius: 5px

// Mixins
animate(name, time, fillmode)
    animation name time fillmode
    -moz-animation name time fillmode
    -webkit-animation name time fillmode
    -o-animation name time fillmode
    -ms-animation name time fillmode

transform(arg)
    transform arg
    -moz-transform arg
    -webkit-transform arg
    -o-transform arg
    -ms-transform arg

// Keyframes
@keyframes bounceIn
    0%
        opacity 0
        transform(scale(.3))
    50%
        opacity 1
        transform(scale(1.05))
    70%
        transform(scale(.9))
    100%
        transform(scale(1))

div#wrapper
    position absolute
